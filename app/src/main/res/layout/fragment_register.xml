<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/rosa"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_marginTop="16dp"
        android:backgroundTint="#484956"
        />
    <TextView
        android:id="@+id/tvcorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Electr칩nico"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        android:layout_marginTop="16dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tfCorreo"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvcorreo" />

    <TextView
        android:id="@+id/lbconfir"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textSize="18dp"
        android:text="Contrase침a"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/tfCorreo"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfpass"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:paddingStart="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbconfir"
        android:layout_marginBottom="20dp"
        app:endIconMode="password_toggle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tfPassRegister"
            android:inputType="textPassword"
            android:background="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/labelConfirmarPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar contrase침a"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf ="@id/tfpass"
        android:layout_marginTop="16dp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/confirPass"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:hint="Confirmar Contrase침a"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelConfirmarPass"
        app:endIconMode="password_toggle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfpassConfirm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelConfirmarPass"
        android:layout_marginBottom="20dp"
        app:endIconMode="password_toggle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tfConfirPassRegister"
            android:inputType="textPassword"
            android:background="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="2in"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf ="parent"
        app:layout_constraintEnd_toEndOf ="parent"
        app:layout_constraintTop_toBottomOf="@id/confirPass"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Registrarse"
        android:textSize="21dp"
        android:backgroundTint="#484956"
        />
    <TextView
        android:id="@+id/yt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ya tengo Cuenta"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="-120dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegister"
        />
    <TextView
        android:id="@+id/iniciar_sesion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        app:layout_constraintBottom_toBottomOf="@id/yt"
        app:layout_constraintStart_toEndOf="@id/yt"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>